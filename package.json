{
  "name": "ssc-server",
  "description": "[![Netlify Status](https://api.netlify.com/api/v1/badges/ae03a3bc-b5a6-4fb8-b9dc-d95cc4606ca1/deploy-status)](https://app.netlify.com/sites/ssc-server/deploys)",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"npm run watch-sass\" \"npm run watch-js\" \"netlify dev --port=8888\"",
    "build": "npm run copy && npm run build-js && npm run build-sass",
    "build-js": "browserify -p esmify -t uglifyify --debug src/index.js > public/bundle.js",
    "copy": "mkdir -p public && cp src/index.html public",
    "build-sass": "sass src/style/main.scss public/style.css",
    "watch-js": "watchify -t uglifyify --debug -p esmify src/index.js -o public/bundle.js",
    "watch-sass": "sass --watch src/style/main.scss public/style.css",
    "test": "tape test/*.js | tap-spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/ssc-server.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/ssc-server/issues"
  },
  "homepage": "https://github.com/nichoth/ssc-server#readme",
  "dependencies": {
    "@nichoth/ssc": "^0.0.6",
    "dotenv": "^8.6.0",
    "faunadb": "^4.2.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "concurrently": "^6.1.0",
    "esmify": "^2.1.1",
    "sass": "^1.32.12",
    "tap-spec": "^5.0.0",
    "tape": "^5.2.2",
    "uglifyify": "^5.0.2"
  }
}
